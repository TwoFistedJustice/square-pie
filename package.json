{
  "name": "square-pie",
  "version": "1.0.0-alpha",
  "description": "an easy to use class based chainable interface for accessing the Square API.",
  "main": "index.js",
  "scripts": {
    "t": "jest",
    "async": "node tests/data_preparation/setup_test.js & npx jest tests/async/",
